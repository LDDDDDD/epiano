<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView android:id="@+id/Text0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="HC"
    />

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="400dp"
		android:id="@+id/LLViewPic"></LinearLayout>

	<ScrollView
	android:id="@+id/ScrollViewPic"
	android:layout_height="10dp"
	android:layout_width="fill_parent"
	android:scrollbars="horizontal">


	</ScrollView>
    <ScrollView
		android:id="@+id/ScrollView01"
		android:layout_height="20dp"
		android:layout_width="fill_parent"
		android:scrollbars="vertical"
		android:layout_weight="0.24"
		android:background="#7c7070">
	<TextView android:id="@+id/in"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    </ScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"       
        >
       	<Button 
			android:text="连接" 
			android:id="@+id/Button03" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="onConnectButtonClicked">
		</Button>

		<Button 
			android:text="退出" 
			android:id="@+id/Button06" 
			android:layout_width="match_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:onClick="onQuitButtonClicked">
		</Button>
    </LinearLayout>
</LinearLayout>